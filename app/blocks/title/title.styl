.title
	font-family $ff-gothamblack
	font-size 29px
	line-height 24px
	color $c-black
	text-transform uppercase
	text-align center
	position relative
	padding-bottom 40px
	+below(420px)
		font-size 22px

	&:after
		content ''
		position absolute
		bottom 0
		left 50%
		transform translateX(-50%)
		width 85px
		height 10px
		background-color $c-green
		border-radius 10px

	&__subtitle
		font-size 23px
		text-transform lowercase
