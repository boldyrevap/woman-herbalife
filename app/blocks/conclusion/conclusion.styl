.conclusion

	&__wrap
		padding 50px 15px

	&__text
		margin-bottom 25px

	&__caption
		font-family $ff-gothambold
		font-size 18px
		line-height 24px
		color $c-black
		text-align center
		margin-bottom 25px
		+below(420px)
			font-size 14px
			line-height 20px

		a
			color $c-black
			text-decoration none
			transition color .3s

			&:hover
				color $c-green

	&__info
		font-family $ff-gothamregular
		font-size 12px
		color $c-grey
		+below(420px)
			font-size 10px

	&__share
		margin-top 50px
