.expert-comment
	background url('../../images/expert-bg-m.jpg') no-repeat center
	background-size cover
	overflow hidden
	+above(769px)
		background url('../../images/expert-bg.jpg') no-repeat center
		background-size cover

	&.active
		.container
			padding 0

	&__wrap
		display flex
		flex-flow row nowrap
		justify-content flex-start
		align-items stretch

	&__content
		background rgba(145, 202, 75, .9)
		flex-basis 425px
		margin-left -25px
		padding 40px
		+below(420px)
			flex-basis 100%
			margin 0
			padding 20px
		+above(769px)
			margin-left -70px

		&-wrap
			padding 10px 20px 10px
			border 1px solid $c-white
			text-align center
			position relative

		.active &
			flex-basis 100%
			margin 0

	&__header
		display flex
		flex-flow column
		justify-content flex-start
		align-items center
		margin-bottom 50px

		.active &
			flex-flow row nowrap
			justify-content space-between
			margin-bottom 20px
			+below(560px)
				flex-flow row wrap
				justify-content center


	&__title
		font-family $ff-gothamblack
		font-size 29px
		color $c-white
		order 2
		width 100%

		.active &
			font-size 18px
			order 1
			width 50%
			text-align right
			+below(560px)
				order 2
				width 100%
				text-align center
				margin-bottom 10px

	&__doc
		display none

		.active &
			display block
			order 3
			width 50%
			text-align left
			+below(560px)
				width 100%
				text-align center

	&__doc-job
		font-family $ff-gothamregular
		font-size 18px
		color $c-white

	&__doc-name
		font-family $ff-gothamblack
		font-size 18px
		color $c-white

	&__ava
		// position absolute
		// top -30px
		// left 50%
		// transform translateX(-50%)
		position relative
		top -30px
		order 1
		+below(420px)
			width 100px
			// top -10px
			img
				width 100%
		.active &
			margin 0 10px

	&__text
		font-family $ff-gothamregular
		font-size 18px
		line-height 24px
		color $c-white
		display none
		.active &
			display block
			margin-bottom 20px

	&__link
		display inline-block
		color $c-white
		font-family $ff-gothamregular
		font-size 12px
		text-decoration none
		p
			margin-bottom 10px

		&:hover
			img
				animation slideDown 1s infinite

		.active &
			display none

		&_hide
			display none

			.active &
				display block


@keyframes slideDown
	0%
		transform translateY(0)
	50%
		transform translateY(-50%)
	100%
		transform translateY(0)
